@model IEnumerable<NBT.Core.Domain.Blog.BlogPost>
<div class="home-special-event">
    <div class="container">
        <h2 class="title-style text-center mb45">
            <span class="title-left">Sự kiện </span><span class="title-right">ĐẶC BIỆT</span><span class="desc">Lựa chọn tốt nhất</span>
        </h2>
        <div class="row">
            <div class="col-md-12">
                <div class="swiper-container service-slider">
                    <div class="swiper-wrapper">
                        @foreach (var item in Model)
                        {
                            <div class="swiper-slide">
                                <a href="/blog/detail/@item.Alias"><img src="@item.Image" alt="@item.Title"></a>
                            </div>
                        }
                    </div>
                    <!-- Add Arrows -->
                    <div class="swiper-button-next"></div>
                    <div class="swiper-button-prev"></div>
                </div>
            </div>
        </div>
    </div>
</div>
