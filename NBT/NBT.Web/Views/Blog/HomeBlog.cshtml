@model IEnumerable<NBT.Core.Domain.Blog.BlogPost>
<div class="home-blog">
    <div class="container">
        <h2 class="title-style text-center mb45">
            <span class="title-left">Tin tức </span><span class="title-right">du lịch</span><span class="desc">Tin tức mới nhất</span>
        </h2>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="blog-wrapper">
                        <div class="blog-content">
                            <img src="@item.Image" style="width:360px; height:202px"  alt="@item.Title">
                            <div class="blog-info">
                                <h3><a href="/blog/detail/@item.Alias">@item.Title</a></h3>
                                <span><i class="fa fa-calendar" aria-hidden="true"></i> @item.CreatedDate.Value.ToString("dd-MM-yyyy")</span>
                                <span><i class="fa fa-user" aria-hidden="true"></i> Admin</span>
                                <p>@item.ShortContent</p>
                                <a href="/blog/detail/@item.Alias" class="readmore">Đọc Thêm</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>