@model IEnumerable<NBT.Core.Domain.Immigrant.Visa>
@{
    var visa = ViewBag.Visa as NBT.Core.Domain.Immigrant.Visa;
    ViewBag.Title = visa.TitleSeo;
    ViewBag.Keyword = visa.KeywordSeo;
    ViewBag.Description = visa.DescriptionSeo;
    ViewBag.StyleHeader = "header header-style-2";
    Layout = "~/Views/Shared/Layouts.cshtml";
}

<div id="example-wrapper">
    @Html.Partial("Navigation")


    <div class="div-box mb">
        <div class="article-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 col-sm-3">
                        <div class="visa-cate-wrap">
                            <div class="visa-cate-content">
                                <div class="visa-title"><span class="icon">text</span><span class="country">Visa Các Nước</span></div>
                                <ul class="flag-wrapper">
                                    @foreach (var item in Model)
                                    {
                                        <li><a href="/visa/@item.Alias"><i class="flag @item.Code">@item.Code</i>@item.Name</a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-9 col-sm-9 mt40-1">
                        <div class="article-wrap">
                            <article>
                                <div class="article-head">
                                    <h3>@visa.Name</h3>
                                    <span><i class="fa fa-calendar" aria-hidden="true"></i> @visa.CreatedDate.ToString("dd-MM-yyyy")</span>
                                    <span><i class="fa fa-user" aria-hidden="true"></i> Admin</span>
                                </div>
                                <div class="article-content">
                                    @Html.Raw(visa.FullDescription)
                                </div>
                            </article>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>