@model NBT.Web.Framework.Models.Cart.OrderVm
@{
    ViewBag.Title = "index";
    ViewBag.StyleHeader = "header header-style-2";
    Layout = "~/Views/Shared/Layouts.cshtml";
}

<div id="example-wrapper">
    
    <div class="div-box mt mb">
        <div class="payment-progress-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <div class="payment-progress">
                            <span class="active"><i class="fa fa-info-circle" aria-hidden="true"></i><strong class="payment-title">Thông tin</strong></span>
                            <span><i class="fa fa-credit-card-alt" aria-hidden="true"></i><strong class="payment-title">thanh toán</strong></span>
                            <span><i class="fa fa-check-circle-o" aria-hidden="true"></i><strong class="payment-title">thành công</strong></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="div-box mb">
        <div class="customer-information-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="customer-information-content">
                            <h4><i class="fa fa-info-circle" aria-hidden="true"></i>Thông tin khách hàng</h4>
                            <form action="/cart/checkout" method="post" id="customerForm">
                                @Html.AntiForgeryToken()
                                <fieldset>
                                    <div class="form-group row">
                                        <label for="fullname" class="col-sm-2 col-form-label">Họ Tên Đầy Đủ <span class="color">*</span></label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" id="fullname" name="CustomerName" maxlength="128" value="@Model.CustomerName">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="phone" class="col-sm-2 col-form-label">Số Điện Thoại <span class="color">*</span></label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" id="phone" name="CustomerPhone" maxlength="32" value="@Model.CustomerPhone" placeholder="09...">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="email" class="col-sm-2 col-form-label">Địa Chỉ Email <span class="color">*</span></label>
                                        <div class="col-sm-10">
                                            <input type="email" class="form-control" id="email" name="CustomerEmail" value="@Model.CustomerEmail" placeholder="emai@gmail.com">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="address" class="col-sm-2 col-form-label">Địa Chỉ address <span class="color">*</span></label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" id="CustomerAddress" name="CustomerAddress" value="@Model.CustomerAddress" maxlength="128">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="date" class="col-sm-2 col-form-label">Ghi chú</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" id="Note" name="Note" maxlength="256" value="">
                                        </div>
                                    </div>
                                    <div class="info-button" style="text-align: right">
                                        <input class="hbtn1 submit" type="submit" value="Gửi">
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>